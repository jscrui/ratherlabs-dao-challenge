it("should allow the admin to set the voting delay", async () => {
    const delay = 86400; // 1 day in seconds
    await governorContract.connect(admin).setVotingDelay(delay);
    const actualDelay = await governorContract.votingDelay();
    expect(actualDelay).to.equal(delay);
  });
  
  it("should allow the admin to set the voting period", async () => {
    const period = 604800; // 1 week in seconds
    await governorContract.connect(admin).setVotingPeriod(period);
    const actualPeriod = await governorContract.votingPeriod();
    expect(actualPeriod).to.equal(period);
  });